<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="shivam.cvm.ui.fragment.developercontact"
    android:background="@mipmap/mainbck">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Developer"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="#FFF"
        android:layout_gravity="left|top" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:id="@+id/imageView2"
        android:src="@drawable/dev"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This Software is Designed and Developed by Shivam Mathur (Batch 2012-2016)"
        android:id="@+id/textView22"
        android:gravity="center"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/nliveo_green_colorPrimary"
            android:padding="2dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:textAllCaps="false"
            android:textStyle=""
            android:text="Call Me"
            android:id="@+id/callmebtn"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textAlignment="center"
            android:focusableInTouchMode="false"
            android:elevation="200dp"
            android:clickable="true"
            android:layout_below="@+id/textView22"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/nliveo_green_colorPrimary"
            android:padding="2dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:textAllCaps="false"
            android:textStyle=""
            android:text="Email Me"
            android:id="@+id/emailmebtn"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textAlignment="center"
            android:focusableInTouchMode="false"
            android:elevation="200dp"
            android:clickable="true"
            android:layout_below="@+id/textView22"
            android:layout_toRightOf="@+id/callmebtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp" />
    </LinearLayout>
</RelativeLayout>
